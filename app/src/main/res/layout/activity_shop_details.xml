<?xml version="1.0" encoding="utf-8"?>
<com.ysd.keepcar.custom.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y750" />

            <TextView
                android:id="@+id/text_yema"
                android:layout_width="@dimen/x96"
                android:layout_height="@dimen/y48"
                android:layout_alignBottom="@+id/viewPager"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:background="@drawable/shop_image_icon"
                android:gravity="center"
                android:text="1/3"
                android:textColor="#fff"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/image_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="30px"
                android:src="@mipmap/retur" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/viewPager"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="普利司通泰然者T001     型号"
                    android:textColor="#000"
                    android:textSize="20dp"
                    app:layout_heightPercent="10%" />

                <TextView
                    android:id="@+id/text_GongSi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="可鑫奥通汽车有限公司"
                    android:textColor="#9C9C9C"
                    android:textSize="15dp"
                    app:layout_heightPercent="10%" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_heightPercent="10%">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="#FF00"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/text_pice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200"
                        android:textColor="#FF00"
                        android:textSize="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_heightPercent="10%">

                    <TextView
                        android:id="@+id/text_yuanjia_pice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="原价￥246" />

                    <TextView
                        android:id="@+id/text_RenShu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="6899人付款" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y20"
                    android:background="#1234"></View>
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<ListView-->
                <!--android:id="@+id/order_listView"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="1"></ListView>-->



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y98"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y98"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y98"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/linear_shop"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/y98"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:src="@mipmap/shop" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="店铺"
                                android:textColor="#000" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/y98"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:src="@mipmap/telephone" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="电话"
                                android:textColor="#000" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/but_GouWuChe"
                            android:layout_width="@dimen/x220"
                            android:layout_height="@dimen/y98"
                            android:layout_weight="1"
                            android:background="#FF840B"
                            android:text="加入购物车"
                            android:textColor="#fff" />

                        <Button
                            android:id="@+id/but_GouMai"
                            android:layout_width="@dimen/x220"
                            android:layout_height="@dimen/y98"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_weight="1"
                            android:background="#ff00"
                            android:text="立即购买"
                            android:textColor="#fff" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</com.ysd.keepcar.custom.PercentLinearLayout>