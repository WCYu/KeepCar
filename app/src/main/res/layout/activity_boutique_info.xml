<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ysd.keepcar.view.home.activity.boutique.BoutiqueInfoActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1">
       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <android.support.v4.view.ViewPager
                   android:id="@+id/boutique_info_pager"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/y750">

               </android.support.v4.view.ViewPager>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:padding="@dimen/x10"
                   android:background="@android:color/white">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="@dimen/x10"
                       >
                       <TextView
                           android:id="@+id/boutique_info_name"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="普利司通泰然者T001"
                           android:textSize="@dimen/y32"
                           android:textColor="#343434"/>

                       <TextView
                           android:id="@+id/boutique_info_xinghao"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="@dimen/x10"
                           android:text="型号"
                           android:textSize="@dimen/y32"
                           android:textColor="#343434"/>
                   </LinearLayout>
                   <TextView
                       android:id="@+id/boutique_info_gongsi"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="可鑫奥通汽车有限公司"
                       android:textSize="@dimen/y28"
                       android:layout_margin="@dimen/x10"
                       />
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="@dimen/x10">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="￥"
                           android:textSize="@dimen/y38"
                           android:textColor="@android:color/holo_red_dark"/>

                       <TextView
                           android:id="@+id/boutique_info_jiage"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="@dimen/x10"
                           android:text="200"
                           android:textSize="@dimen/y38"
                           android:textColor="@android:color/holo_red_dark"/>
                   </LinearLayout>

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:padding="@dimen/x10">
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="原价"
                               android:textSize="@dimen/y28"
                               />

                           <TextView
                               android:id="@+id/boutique_info_yuanjia"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="@dimen/x10"
                               android:text="￥ 246"
                               android:textSize="@dimen/y28"
                               />
                       </LinearLayout>
                       <TextView
                           android:id="@+id/boutique_info_fukuan"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentRight="true"
                           android:text="699人付款"
                           android:layout_marginRight="@dimen/x20"
                           android:layout_centerVertical="true"
                           android:textSize="@dimen/y28"/>
                   </RelativeLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:background="@android:color/white"
                   android:layout_marginTop="@dimen/x10"
                   android:padding="@dimen/x10">
                   <TextView
                       android:id="@+id/boutique_info_pingjia"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="用户评价（553）"
                       android:textSize="@dimen/y32"
                       android:textColor="#343434"
                       android:layout_margin="@dimen/x10"
                       />
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="@dimen/x10">
                       <ImageView
                           android:id="@+id/boutique_info_usericon"
                           android:layout_width="@dimen/x48"
                           android:layout_height="@dimen/y48"
                           android:background="@android:color/background_dark"/>
                       <TextView
                           android:id="@+id/boutique_info_userphone"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="@dimen/x10"
                           android:text="电话"
                           android:layout_gravity="center"
                           android:textSize="@dimen/y28"/>
                   </LinearLayout>
                   <TextView
                       android:id="@+id/boutique_info_userpingjia"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="@dimen/x10"
                       android:textSize="@dimen/y28"
                       android:text="宝贝特别漂亮,实用,耐磨..."/>
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <Button
                           android:id="@+id/boutique_info_gengduo"
                           android:layout_width="@dimen/x159"
                           android:layout_height="@dimen/y58"
                           android:layout_centerInParent="true"
                           android:text="查看更多"/>
                   </RelativeLayout>
               </LinearLayout>
           </LinearLayout>

       </ScrollView>
       <com.ysd.keepcar.custom.CustomTool
           android:id="@+id/boutique_info_custom"
           android:fitsSystemWindows="true"
           android:layout_width="match_parent"
           android:layout_height="@dimen/y128"
           android:background="@color/transparent"
           android:gravity="center"
           android:paddingTop="15dp">

       </com.ysd.keepcar.custom.CustomTool>
   </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y98"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/boutique_info_dianpu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:textSize="@dimen/y24"
                android:drawableTop="@mipmap/dianpu"
                android:text="店铺"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/boutique_info_dianhua"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:gravity="center"
                android:textSize="@dimen/y24"
                android:drawableTop="@mipmap/dianhua"
                android:text="电话"/>
        </RelativeLayout>
        <Button
            android:id="@+id/boutique_info_gouwuche"
            android:layout_width="@dimen/x218"
            android:layout_height="match_parent"
            android:text="加入购物车"
            android:textColor="@android:color/white"
            android:textSize="@dimen/y30"
            android:background="@color/cheng"/>
        <Button
            android:id="@+id/boutique_info_goumai"
            android:layout_width="@dimen/x218"
            android:layout_height="match_parent"
            android:text="立即购买"
            android:textSize="@dimen/y30"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_dark"/>
    </LinearLayout>
</LinearLayout>
