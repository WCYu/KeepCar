<?xml version="1.0" encoding="utf-8"?>
<com.ysd.keepcar.custom.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ysd.keepcar.view.home.activity.RenewalActivity">

    <com.ysd.keepcar.custom.CustomTool
        android:id="@+id/renewal_custom"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlackText"
        android:gravity="center"
        android:paddingTop="15dp"
        app:layout_heightPercent="10%">

    </com.ysd.keepcar.custom.CustomTool>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:padding="10dp"
        android:gravity="center"
        android:background="@android:color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆"
            android:textSize="@dimen/y30"/>

        <TextView
            android:id="@+id/renewal_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="宝马"/>

        <LinearLayout
            android:id="@+id/renewal_car_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="请选择"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/rightjiantou"/>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/tab_prss_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车价"
            android:textSize="@dimen/y30"/>
        <EditText
            android:id="@+id/renewal_car_price"
            android:layout_marginLeft="@dimen/y20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textSize="@dimen/y26"
            android:hint="请输入实购车价"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:layout_marginTop="@dimen/y20"
        android:padding="10dp"
        android:gravity="center"
        android:background="@android:color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上期保险公司"
            android:textSize="@dimen/y30"/>

        <TextView
            android:id="@+id/renewal_last_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/renewal_shangqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="请选择"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/rightjiantou"/>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/tab_prss_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:padding="10dp"
        android:gravity="center"
        android:background="@android:color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本期保险公司"
            android:textSize="@dimen/y30"/>

        <TextView
            android:id="@+id/renewal_this_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:id="@+id/renewal_benqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="请选择"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/rightjiantou"/>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/tab_prss_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:padding="10dp"
        android:gravity="center"
        android:background="@android:color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="险种"
            android:textSize="@dimen/y30"/>

        <TextView
            android:id="@+id/renewal_insurance_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/y26"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/renewal_xianzhong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="请选择"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/rightjiantou"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y224"
        android:orientation="vertical"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/y10"
            android:background="@android:color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="向以下4S店索取报价单"
                android:textSize="@dimen/y30"/>
            <CheckBox
                android:id="@+id/renewal_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/y10"
                android:text="全选"
                android:button="@drawable/check_renewal"
                >
            </CheckBox>
        </RelativeLayout>

            <CheckBox
                android:layout_margin="@dimen/y15"
                android:id="@+id/renewal_claim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="向以下4S店索取报价单"
                android:textSize="@dimen/y26"
                android:button="@drawable/check_renewal"/>
            <CheckBox
                android:layout_margin="@dimen/y15"
                android:id="@+id/renewal_claim2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="向以下4S店索取报价单"
                android:textSize="@dimen/y26"
                android:button="@drawable/check_renewal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_heightPercent="35%"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温馨提示:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/y22"
            android:text="如果与上上期是同一家保险公司且同一家4S店续保,无需本人到店,直接对索取报价单完成支付即可,电子保单将自动发送到指定邮箱。"/>
    </LinearLayout>
    <Button
        android:id="@+id/renewal_claim_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="索取报价单"
        android:textColor="@android:color/white"
        android:background="@color/colorRed"
        android:textSize="@dimen/y38"/>
</com.ysd.keepcar.custom.PercentLinearLayout>
