<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ysd.keepcar.view.home.activity.activity.ActivityInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v4.view.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y500">

                </android.support.v4.view.ViewPager>
                <com.ysd.keepcar.custom.CustomTool
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y128">

                </com.ysd.keepcar.custom.CustomTool>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:background="@android:color/holo_red_dark">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/huo"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/y20"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保险活动"
                    android:layout_marginLeft="@dimen/y20"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/y60"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="某某某保险活动"
                        android:layout_marginTop="@dimen/y20"
                        android:layout_marginLeft="@dimen/y20"
                        android:textSize="@dimen/y32"
                        android:textColor="#343434"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/y20">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="@dimen/y32"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200"
                            android:textSize="@dimen/y32"
                            android:textColor="@android:color/holo_red_dark"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y98"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/boutique_info_dianpu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:textSize="@dimen/y24"
                android:drawableTop="@mipmap/dianpu"
                android:text="店铺"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/boutique_info_dianhua"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:gravity="center"
                android:textSize="@dimen/y24"
                android:drawableTop="@mipmap/dianhua"
                android:text="电话"/>
        </RelativeLayout>
        <Button
            android:id="@+id/boutique_info_goumai"
            android:layout_width="@dimen/x400"
            android:layout_height="match_parent"
            android:text="立即购买"
            android:textSize="@dimen/y30"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_dark"/>
    </LinearLayout>
</LinearLayout>
