<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ysd.keepcar.view.home.activity.DetailsActivity">

    <include
        layout="@layout/details_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/fanhui_details"
            android:text="店铺"
            android:button="@null"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/dianpu"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/dianhua_details"
            android:text="电话"
            android:button="@null"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/dianhua"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/goumai_details"
            android:text="立刻购买"
            android:button="@null"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorRed"
            android:layout_height="match_parent" />
    </RadioGroup>

</LinearLayout>
<com.ysd.keepcar.custom.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignEnd="@+id/button"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/button"
            app:layout_heightPercent="8%" />

        <TextView
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/viewPager"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30px"
            android:text="1/3"
            android:textColor="#fff"
            android:textSize="30dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:layout_marginTop="30px"
            android:src="@mipmap/retur" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/viewPager"
            android:orientation="vertical">


            <TextView
                android:id="@+id/foreTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="普利司通泰然者T001     型号"
                android:textColor="#000"
                android:textSize="20dp"
                app:layout_heightPercent="10%" />

            <TextView
                android:id="@+id/forecontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="可鑫奥通汽车有限公司"
                android:textColor="#9C9C9C"
                android:textSize="15dp"
                app:layout_heightPercent="10%" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_heightPercent="10%">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="#FF00"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/froePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:textColor="#FF00"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_heightPercent="10%">

                <TextView
                    android:id="@+id/text_pice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="原价￥246" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="6899人付款" />
            </LinearLayout>
        </LinearLayout>

        <!--<include layout="@layout/details_shopping_cart"></include>-->
    </RelativeLayout>
</com.ysd.keepcar.custom.PercentLinearLayout>
