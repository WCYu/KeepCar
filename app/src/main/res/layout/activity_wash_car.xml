<?xml version="1.0" encoding="utf-8"?>
<com.ysd.keepcar.custom.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ysd.keepcar.view.home.activity.washcar.WashCarActivity">

    <com.ysd.keepcar.custom.CustomTool
        android:id="@+id/washcar_custom"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlackText"
        android:gravity="center"
        android:paddingTop="15dp"
        app:layout_heightPercent="10%">
    </com.ysd.keepcar.custom.CustomTool>

    <LinearLayout
        android:id="@+id/linear_washcar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88">
        <ToggleButton
            android:textOff="店铺"
            android:textOn="店铺"
            android:textSize="34px"
            android:id="@+id/dianpu_washcar"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:drawableRight="@drawable/washcar_btn"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="18dp"
            android:background="#dddddd" />

            <ToggleButton
                android:textOff="排序"
                android:textOn="排序"
                android:textSize="34px"
                android:id="@+id/paixu_washcar"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:drawableRight="@drawable/washcar_btn"/>
    </LinearLayout>

    <ListView
        android:id="@+id/washcar_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</com.ysd.keepcar.custom.PercentLinearLayout>
