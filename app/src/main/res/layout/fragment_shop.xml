<com.ysd.keepcar.custom.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ysd.keepcar.view.shop.ShopFragment">

    <RadioGroup
        android:id="@+id/shop_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:background="@android:color/white"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:drawableRight="@drawable/item_filter_arrow"
            android:id="@+id/radiobut_Brand"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="品牌"
            android:textSize="16sp" />


        <RadioButton
            android:id="@+id/radiobut_Storefront"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/item_filter_arrow"
            android:gravity="center"
            android:text="店面"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radiobut_sort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/item_filter_arrow"
            android:gravity="center"
            android:text="排序"
            android:textSize="16sp" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <ListView
        android:id="@+id/lv_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</com.ysd.keepcar.custom.PercentLinearLayout>

