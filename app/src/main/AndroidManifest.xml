<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ysd.keepcar">

    <application
        android:allowBackup="true"
        android:name=".app.AppService"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity" />
        <activity android:name=".view.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.desmond.citypicker.ui.CityPickerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".view.home.activity.MaintainActivity" />
        <activity android:name=".view.home.activity.RepairActivity" />
        <activity android:name=".view.home.activity.ExhibitionActivity" />
        <activity android:name=".view.home.activity.RenewalActivity" />
        <activity android:name=".view.home.activity.BoutiqueActivity" />
        <activity android:name=".view.home.activity.WashCarActivity" />
        <activity android:name=".view.home.activity.ActivityActivity" />
        <activity android:name=".view.home.activity.ShoppingMallActivity" />
        <activity android:name=".view.home.activity.QueryActivity" />
        <activity android:name=".view.home.activity.RescueActivity" />
        <activity android:name=".CityActivity"></activity>
    </application>

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>